<div class="container">
  <div class="container-signin">
    <div class="cards-signin">
      <div class="card-signin">
        <h2>Please create your account !</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      placeholder: 'user@domain.com',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class:"test" }%>
          <%= f.input :password,
                      placeholder: 'password',
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class:"test" } %>
          <%= f.input :password_confirmation,
                      placeholder: 'password',
                      required: true,
                      input_html: { autocomplete: "new-password", class:"test" } %>
          </div>
          <div class="form-actions gradient-blue-button">
            <%= f.button :submit,  "Continue", class: "text-white" %>
          </div>
        <% end %>
        <span><p>Already a member? <%= link_to "Sign in", new_user_session_path %><br /></p></span>
      </div>

       <div class="card-right" style="text-align:center">
        <span ><h2 style="margin-bottom:30px; font-size:35px;">Find the perfect match</h2></span>
        <span><%= image_tag 'Homepageimg.png', style:"height: 290px" %></span>
      </div>
      </div>
    </div>
  </div>
</div>
