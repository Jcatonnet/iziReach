<div class="container">
  <div class="container-signin mt-5">
    <div class="cards-signin">
      <div class="card-signin bg-white">
        <h2 style="font-size:35px">Please login to your account !</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class:"test"} %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class:"test" } %>
          </div>
          <div class="d-flex justify-content-center">
            <%= f.button :submit, "Continue", class: "button_blue shadow_button_blue mt-2 mb-1 mx-1 w-auto"%>
          </div>
        <% end %>
        <div class="link-member">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <p>Not a member? <%= link_to "Sign up now", new_registration_path(resource_name) %><br /></p>
          <% end %>
        </div>
      </div>
      <div class="card-right" style="text-align:center">
        <span ><h2 style="margin-bottom:30px; font-size:35px;">Find the perfect match</h2></span>
        <span><%= image_tag 'influ_test.png', style:"height: 220px" %></span>
      </div>
    </div>
  </div>
</div>
