<%= simple_form_for [ @company, @campaign ] do |f| %>
  <%= f.input :name, placeholder: "campaign's name"%>
  <%= f.input :description, placeholder: "detailed information about your campaign"%>
  <%= f.input :target, placeholder: "campaign target" %>
  <%= f.input :occurs_at, placeholder: "date"%>
  <div class="d-flex flex-wrap justify-content-center align-items-center w-100 mt-5" style="margin-bottom:15px">
      <div class="w-50 px-2">
        <%= f.input :lifestyle %>
      </div>
      <div class="w-50 px-2">
        <%= f.input :sport %>
      </div>    
      <div class="w-50 px-2">
        <%= f.input :food %>
      </div>          
      <div class="w-50 px-2">
        <%= f.input :gaming %>
      </div>      
      <div class="w-50 px-2">
        <%= f.input :healthy %>
      </div>
      <div class="w-50 px-2">
        <%= f.input :travel %>
      </div>
      <div class="w-50 px-2">
        <%= f.input :music %>
      </div>
      <div class="w-50 px-2">
        <%= f.input :fashion %>
      </div>
      <div class="w-50 px-2">
        <%= f.input :art %>
      </div>
      <div class="w-50 px-2">
        <%= f.input :technology %>
      </div>
      <div class="w-50 px-2">
        <%= f.input :humour %>
      </div>
      <div class="w-50 px-2">
        <%= f.input :beauty %>
      </div>
    </div>
  <%= f.input :number_of_stories, placeholder: "# of stories"%>
  <%= f.input :number_of_photos, placeholder: "# of photos"%>
   <%= f.input :number_of_videos, placeholder: "# of videos"%>
  <%= f.input :number_of_lives, placeholder: "# of lives"%>
  <%= f.input :photo, as: :file %>
  <div class="btn">
    <%= f.submit "Create", class: "btn" %>
  </div>
<% end %>
