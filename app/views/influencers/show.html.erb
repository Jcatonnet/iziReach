<div class="container p-5">
  <div class="container-show-influencer">

    <div class="infos-show-influencer">
      <img src="<%= @influencer.instagram_pp %>" alt="photo profil">
      <h2><%= @influencer.fullname %></h2>
      <p>Washington, États-Unis</p>
    </div>

    <div class="container-info-account-influencer">
      <div class="card-info"><p><%= @uploads %> <br> Posts</p></div>
      <div class="card-info"><p><%= @following %> <br> Following</p></div>
      <div class="card-info"><p><%= @influencer.followers %> <br> Followers</p></div>
      <div class="card-info"><p><%= @influencer.engagement %> <br> Engagement</p></div>
    </div>

    <div>
      <ul>
        <li>Username: <%= @influencer.user_name %></li>
        <li>Description: <%= @influencer.description %></li>
        <li><%= @influencer.price_per_story %>€ per story</li>
        <li><%= @influencer.price_per_photo %>€ per photo</li>
        <li><%= @influencer.price_per_video %>€ per video</li>
        <li><%= @influencer.price_per_live %>€ per live</li>
      </ul>
    </div>

  </div>
</div>

